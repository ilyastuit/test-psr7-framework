{% extends 'layout/default.html.twig' %}

{% block title %}task{% endblock %}

{% block meta %}
    <meta name="description" content="task Page description" />
{% endblock %}

{% block breadcrumbs %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item active">task</li>
    </ul>
{% endblock %}

{% block content %}
    <h1>task</h1>

    {% for task in tasks %}

        <div class="card mb-3">
            <div class="card-header">
                <span class="float-right">{{ task.date|date('Y-m-d') }}, {{ task.commentsCount }} comments</span>
                <a href="{{ path('task_show', {'id': task.id}) }}">{{ task.title }}</a>
            </div>
            <div class="card-body">{{ task.preview|nl2br }}</div>
        </div>

    {% endfor %}

    {% include 'share/pager.html.twig' with {
        'pager': pager,
        'main_route': 'task',
        'route': 'task_page',
    } %}

{% endblock %}